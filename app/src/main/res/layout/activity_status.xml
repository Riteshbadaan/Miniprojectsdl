<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/samplec"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="80dp"
        android:background="#181818"
        android:gravity="center"
        android:fontFamily="@font/regular"
        android:ems="10"
        android:text="C"
        android:inputType="textPersonName"
        android:textColorHint="#808080"
        android:textColor="#fff"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/statusc"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/samplec"
        android:layout_marginTop="15dp"
        android:background="#181818"
        android:fontFamily="@font/regular"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textColorHint="#808080"
        android:textColor="#fff"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/samplec1"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/statusc"
        android:layout_marginTop="15dp"
        android:background="#181818"
        android:gravity="center"
        android:fontFamily="@font/regular"
        android:ems="10"
        android:text="C++"
        android:inputType="textPersonName"
        android:textColorHint="#808080"
        android:textColor="#fff"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/statusc1"
        android:layout_width="300dp"
        android:fontFamily="@font/regular"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/samplec1"
        android:background="#181818"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textColorHint="#808080"
        android:textColor="#fff"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/samplejava"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/statusc1"
        android:layout_marginTop="15dp"
        android:background="#181818"
        android:gravity="center"
        android:fontFamily="@font/regular"
        android:ems="10"
        android:text="Java"
        android:inputType="textPersonName"
        android:textColorHint="#808080"
        android:textColor="#fff"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/statusjava"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/samplejava"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#181818"
        android:fontFamily="@font/regular"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textColor="#fff"
        android:textColorHint="#808080"
        android:textSize="20dp" />


</RelativeLayout>